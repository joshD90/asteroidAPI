<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/styles.css">
  <title>Asteroid</title>
</head>

<body>

  <body>
    <div class="mainHeaderImg">
      <h1 class="mainHeaderTitle">Impact the Asteroid</h1>
      <div class="selectorDiv">
        <div class="selectorHeader">
          <h3>Sort by Criteria</h3>
        </div>
        <div class="selectorForm">
          <form action="/rearrange" method="post">
            <select name="arrangeBySelector" id="">
              <option value="distance">Distance</option>
              <option value="mass">Mass</option>
              <option value="velocity">Velocity</option>
            </select>
            <select name="ascDec" id="">
              <option value="ascending">Ascending</option>
              <option value="descending">Decending</option>
            </select>
            <button type="submit">Sort</button>
          </form>
        </div>


      </div>
    </div>



    <div class="asteroidListContainer">
      <% asteroidList.forEach(asteroid => { %>
      <div class="asteroidDiv">
        <form action="/moreInfo" method="post">

          <div class="designationDiv">
            <h4><%= asteroid[0] %></h4>
            <input type="hidden" value="<%= asteroid[0] %>" name="asteroidDesignation">
          </div>
          <ul>
            <li>Date and Time: <%= asteroid[3]%></li>
            <li>How Close (km) : <%= Math.round(asteroid[4] * 149600000, 2) %></li>
            <li>How Fast (km/s) : <%= parseFloat(asteroid[7]).toFixed(2) %> km/s</li>
          </ul>

          <button type="submit">More Information</button>

        </form>
      </div>
      <% }) %>
    </div>
  </body>

</html>